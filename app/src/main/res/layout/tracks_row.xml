<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tracks_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/list_play_btn" />

    <TextView
        android:id="@+id/file_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/archive_name"
        android:textColor="@color/primary_dark"
        android:textColorHint="@color/primary_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tracks_image"
        app:layout_constraintTop_toTopOf="@+id/tracks_image" />

    <TextView
        android:id="@+id/last_modified_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/last_modified"
        android:textColor="@color/primary_dark"
        app:layout_constraintBottom_toBottomOf="@+id/tracks_image"
        app:layout_constraintStart_toEndOf="@+id/tracks_image"
        app:layout_constraintTop_toBottomOf="@+id/file_name_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>